<!DOCTYPE html>
<html>

<head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <form id="contactForm" method="post">
        <div class="formGroup">
            <label for="firstName">first</label>
            <input id="firstName" name="firstName" value="{{contact.firstName}}" required />
        </div>
        <div class="formGroup">
            <label for="lastName">last</label>
            <input id="lastName" name="lastName" value="{{contact.lastName}}" required />
        </div>
        <div class="formGroup">
            <label for="email">email</label>
            <input type="email" id="email" name="email" value="{{contact.email}}" />
        </div>
        <div class="formGroup">
            <label for="phone">phone</label>
            <input type="tel" id="phone" name="phone" value="{{contact.phone}}" />
        </div>
        <div class="buttons">
            <button class="btn" >edit</button>
            <a class="btn" href="/contacts">cancel</a>
        </div>
    </form>
</body>

</html>